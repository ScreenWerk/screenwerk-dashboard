extends layout

append styles
  // Custom styles for this template
  //- link(href='../node_modules/jade-bootstrap/css/dashboard.css', rel='stylesheet')

block body
  .container
    h1.page-header All the screens
    .row
      each screenGroup in screenGroups
        .col-xs-12
          H3= screenGroup.eid + ': ' + screenGroup.name
          // pre= JSON.stringify(screenGroup, null, 4)
          each screen in screenGroup.screens
            .col-xs-6.col-sm-4.col-lg-2
              h4= screen.eid + ' ' + Math.round((screen.lastSeen - new Date().getTime())/1e3) + 'sec'
              p= screen.version
              p= screen.ip
              p= 'Every ' + screen.avgInterval + 'sec'
              // pre= JSON.stringify(screen, null, 4)
